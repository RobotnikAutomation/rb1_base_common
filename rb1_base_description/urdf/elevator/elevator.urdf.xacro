<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"> 
	
	
	<xacro:include filename="$(find rb1_base_description)/urdf/elevator/elevator.transmission.xacro"/>
	<xacro:include filename="$(find rb1_base_description)/urdf/elevator/elevator.gazebo.xacro"/>
	
	<xacro:macro name="elevator_platform" params="prefix parent hq *origin">
	<!-- PARAMS: -->
	<!-- name : name of the link: -->
	<!-- hq: selects model in high quality (.dae) -->
    <xacro:macro name="solid_cuboid_inertia" params="m h d w">
		<inertia  ixx="${(m*(h*h+d*d))/12}" ixy = "0" ixz = "0"
              iyy="${(m*(w*w+d*d))/12}" iyz = "0"
              izz="${(m*(w*w+h*h))/12}"
     /> 
    </xacro:macro>
	<!-- ELEVATOR_BASE_LINK -->
	<joint name="${prefix}_base_joint" type="fixed">
		<parent link="${parent}"/>
		<child link="${prefix}_base_link"/>
		<xacro:insert_block name="origin" />
	</joint> 
	
	<link name="${prefix}_base_link">
		<!--inertial>
			<mass value="0.1" />
			<origin xyz="0 0 0" />
			<inertia	ixx="0.007" ixy="0.0"  ixz="0.0"
						iyy="0.007"  iyz="0.0"
						izz="0.78125"/>
		</inertial-->
		<inertial>
			<mass value="0.005" />
			<origin xyz="0 0 -0.27" />
			<solid_cuboid_inertia m="0.005" h="0.05" d="0.05" w="0.05"/>
		</inertial> 
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<xacro:if value="${hq}">
				<geometry>
					<mesh filename="file://$(find rb1_base_description)/meshes/elevator/rb1_elevator_base.dae"/>
				</geometry>
			</xacro:if>
			<xacro:unless value="${hq}">
				<geometry>
					<mesh filename="file://$(find rb1_base_description)/meshes/elevator/rb1_elevator_base.stl"/>
				</geometry>
			</xacro:unless>
			<material name="darkgrey">
				<color rgba="0.1 0.1 0.1 1"/>
			</material>
		</visual>  
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0 " />
			<geometry>
				<mesh filename="file://$(find rb1_base_description)/meshes/elevator/rb1_elevator_base.dae"/>
			</geometry>
		</collision>
	</link>

	<!-- ELEVATOR PLATFORM -->
	<joint name="${prefix}_platform_joint" type="prismatic">
			<origin xyz="0.0 0.0 0.041" rpy="0 0 0 " />
			<parent link="${prefix}_base_link"/>
			<child link="${prefix}_platform_link" />
			<axis xyz="0 0 1"/>
			<limit effort="10.0" lower="0.0" upper="0.034" velocity="0.5"/>
	</joint> 
	<link name="${prefix}_platform_link">
		<!--inertial>
			<mass value="0.05" />
			<origin xyz="0 0 0" />
			<inertia  ixx="0.00007" ixy="0.0"  ixz="0.0"  iyy="0.00007"  iyz="0.0"  izz="0.0078" />
		</inertial-->
		<inertial>
			<mass value="0.005" />
			<origin xyz="0 0 -0.27" />
			<solid_cuboid_inertia m="0.005" h="0.05" d="0.05" w="0.05"/>
		</inertial> 
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<xacro:if value="${hq}">
				<geometry>
					<mesh filename="file://$(find rb1_base_description)/meshes/elevator/rb1_elevator_platform.dae"/>
				</geometry>
			</xacro:if>
			<xacro:unless value="${hq}">
				<geometry>
					<mesh filename="file://$(find rb1_base_description)/meshes/elevator/rb1_elevator_platform.stl"/>
				</geometry>
			</xacro:unless>
			<material name="black">
				<color rgba="0.0 0.0 0.0 1"/>
			</material>
		</visual>  
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0 " />
			<geometry>
				<mesh filename="file://$(find rb1_base_description)/meshes/elevator/rb1_elevator_platform.dae"/>
			</geometry>
		</collision>
		
	</link>

	<xacro:elevator_transmission prefix="${prefix}" />
	<xacro:elevator_gazebo prefix="${prefix}" />

	</xacro:macro>
	

	
</robot>

