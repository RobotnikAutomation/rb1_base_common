<?xml version="1.0"?>
<robot name="wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find rb1_base_description)/urdf/inertia.urdf.xacro"/>

  <!-- CONSTANTS -->
  <xacro:property name="M_PI" value="3.1415926535897931"/>
  <xacro:property name="wheel_radius" value="0.076"/>
  <xacro:property name="wheel_height" value="0.025"/>
  <xacro:property name="wheel_mass" value="1.0"/>

  <!-- WHEEL XACRO -->
  <xacro:macro name="rubber_wheel" params="prefix parent *origin reflect hq">

    <!--TIRE -->
    <joint name="${prefix}wheel_joint" type="continuous">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}wheel_link"/>
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" velocity="100"/>
      <dynamics damping="0.05" friction="0.1"/>
    </joint>

    <link name="${prefix}wheel_link">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find rb1_base_description)/meshes/wheels/wheel_rubber_6inch.dae"/>
          </geometry>
        </xacro:if>
        <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin xyz="0 0 0" rpy="${M_PI/2} 0 0"/>
          <geometry>
            <cylinder length="${wheel_height}" radius="${wheel_radius}"/>
          </geometry>
        </xacro:unless>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${M_PI/2} 0 0"/>
          <geometry>
            <cylinder length="${wheel_height}" radius="${wheel_radius}"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="${wheel_mass}"/>
          <origin xyz="0 0 0" rpy="${M_PI/2} 0 0"/>
          <xacro:solid_cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}"/>
        </inertial>
      </link>

    <gazebo reference="${prefix}wheel_link">
      <mu1>0.95</mu1>
      <mu2>0.90</mu2>
      <kp>2.75e6</kp>
      <kd>8.25e1</kd>
      <fdir1>0 0 0</fdir1>
      <maxContacts>4</maxContacts>
    </gazebo>
  </xacro:macro>
</robot>
